# ==============================================
# Git LFS attributes for TUSCO Paper
# ==============================================

# Large sequence files
*.fasta filter=lfs diff=lfs merge=lfs -text
*.fa filter=lfs diff=lfs merge=lfs -text
*.fastq filter=lfs diff=lfs merge=lfs -text
*.fq filter=lfs diff=lfs merge=lfs -text

# Compressed files
*.gz filter=lfs diff=lfs merge=lfs -text
*.bz2 filter=lfs diff=lfs merge=lfs -text
*.xz filter=lfs diff=lfs merge=lfs -text

# Binary alignment files
*.bam filter=lfs diff=lfs merge=lfs -text
*.sam filter=lfs diff=lfs merge=lfs -text

# Large annotation files
*.gtf filter=lfs diff=lfs merge=lfs -text
*.gff filter=lfs diff=lfs merge=lfs -text
*.gff3 filter=lfs diff=lfs merge=lfs -text
*.bed filter=lfs diff=lfs merge=lfs -text

# Large tabular data files
*.tsv filter=lfs diff=lfs merge=lfs -text
*.csv filter=lfs diff=lfs merge=lfs -text

# GenePred format files
*.genePred filter=lfs diff=lfs merge=lfs -text

# Specific large files in this project
**/nih_all_read_lengths.tsv filter=lfs diff=lfs merge=lfs -text
**/*_corrected.fasta filter=lfs diff=lfs merge=lfs -text
**/*_corrected.genePred filter=lfs diff=lfs merge=lfs -text
**/*_corrected.gtf filter=lfs diff=lfs merge=lfs -text
**/sqanti3_corrected.fasta filter=lfs diff=lfs merge=lfs -text
**/refAnnotation_*.genePred filter=lfs diff=lfs merge=lfs -text

# Track files by size (>10MB)
*.[Tt][Ss][Vv] filter=lfs diff=lfs merge=lfs -text
*.[Ff][Aa][Ss][Tt][Aa] filter=lfs diff=lfs merge=lfs -text